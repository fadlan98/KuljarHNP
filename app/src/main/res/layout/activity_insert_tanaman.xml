<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insertTanamanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Insert Data Tanaman"
        app:titleTextColor="@android:color/black"></androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="336dp"
        android:layout_height="604dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="600dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageViewTanamanInsert"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/btnInsertImageTanaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Choose File" />

            <TextView
                android:id="@+id/textview71"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nama Tanaman:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/namaTanamanInsertText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textview42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Latin:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/namaLatinInsertText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textview22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/deskripsiInsertText"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textview1111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sebaran:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sebaranInsertText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textview52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habitat:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/habitatInsertText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textview2113"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sumber"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sumberInsertText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/insertTanamanBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Insert" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>