<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".readDataTanamanActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Data Tanaman"
        app:titleTextColor="@android:color/black"></androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="336dp"
        android:layout_height="604dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <ImageView
                android:id="@+id/imageViewReadTanaman"
                android:layout_width="match_parent"
                android:layout_height="333dp"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/btnChangeGambarTanaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Choose File"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textview71"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nama Tanaman:"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/namaTanamanReadText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textview42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Latin:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/namaLatinReadText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textview22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/deskripsiReadText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:text="wwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww" />


            <TextView
                android:id="@+id/textview1111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sebaran:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sebaranReadText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|left"
                android:inputType="textMultiLine"
                android:text="wwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww" />

            <TextView
                android:id="@+id/textview52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habitat:"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/habitatReadText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textview2113"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sumber"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sumberReadText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/updateTanamanBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Update Data Tanaman"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>
    <Switch
        android:id="@+id/switchTanaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>