<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutLE"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listExplanTxtView"
                    android:layout_width="274dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:text="List Eksplan"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnListEksplan"
                    android:layout_width="103dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:drawable/ic_menu_send" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSCQR"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@android:color/holo_green_light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scanQRTxtView"
                    android:layout_width="271dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:text="Scan QR"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSCQREksplan"
                    android:layout_width="103dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:drawable/ic_menu_send" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutdaftarKontam"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="?attr/colorButtonNormal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/daftarKontamTxtView"
                    android:layout_width="271dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:text="Daftar Kontam"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btndaftarKontam"
                    android:layout_width="103dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:drawable/ic_menu_send" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutdaftarJual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/daftarJualTxtView"
                    android:layout_width="279dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:text="Daftar Jual"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btndaftarJual"
                    android:layout_width="103dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:drawable/ic_menu_send" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>